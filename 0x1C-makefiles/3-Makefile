CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
.PHONY = all clean fclean oclean re


all: $(NAME)

# Rule to build executable
$(NAME): $(OBJ)
	$(CC) $^ -o $@

clean:
	$(RM) *~, *.swp, $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

%.o: %.c
	$(CC) $< -c
